<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_recipes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:contentDescription="@string/button_recipes"
            android:src="@drawable/ic_recipes" />

        <ImageButton
            android:id="@+id/btn_calculator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:contentDescription="@string/button_calculator"
            android:src="@drawable/ic_calculator" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/orange"

            android:contentDescription="@string/button_search"
            android:src="@drawable/ic_search" />

        <ImageButton
            android:id="@+id/btn_account"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:contentDescription="@string/button_account"
            android:src="@drawable/ic_person" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>